{
  "name": "@sznowicki/nowicki-io",
  "private": true,
  "author": "Szymon Nowicki",
  "scripts": {
    "make:pages": "node -r @swc/register scripts/build.js",
    "make:files": "cp -r static/* public",
    "make:frontend": "parcel build app/style.scss --dist-dir public/assets",
    "build": "yarn make:pages && yarn make:frontend && yarn make:files",
    "watch": "nodemon --exec 'yarn build' --watch scripts --watch content --watch app -e js,jsx,pug,md,scss",
    "serve": "http-server public/",
    "dev": "yarn serve & yarn watch"
  },
  "browserslist": [
    "> 5% in DE",
    "last 2 versions and not dead",
    "not ie > 0",
    "not op_mob > 0",
    "not op_mini all",
    "not kaios > 0",
    "not and_qq > 0"
  ],
  "dependencies": {
    "@fontsource/raleway": "^5.0.3",
    "@fontsource/vollkorn": "^5.0.3",
    "@fontsource/vollkorn-sc": "^5.0.3",
    "feed": "^4.2.2",
    "fs-extra": "^11.1.1",
    "highlight.js": "^11.8.0",
    "parcel": "^2.9.3",
    "pug": "^3.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.63.4",
    "showdown": "^2.1.0",
    "showdown-highlight": "^3.1.0"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "2.9.2",
    "@swc/core": "^1.3.64",
    "@swc/register": "^0.1.10",
    "http-server": "^14.1.1",
    "nodemon": "^2.0.22"
  },
  "license": "0BSD"
}
